<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.aprendoz_desarrollodb.data.TipoRecurso" table="Tipo_Recurso" catalog="aprendoz_desarrollo" dynamic-insert="false" dynamic-update="false">
        <id name="idTipoRecurso" type="integer">
            <column name="Id_Tipo_Recurso"/>
            <generator class="assigned"/>
        </id>
        <property name="tipoRecurso" type="string">
            <column name="Tipo_Recurso" length="45"/>
        </property>
        <set name="recursos" inverse="true" cascade="">
            <key>
                <column name="Tipo_Recurso_Id_Tipo_Recurso" not-null="true"/>
            </key>
            <one-to-many class="com.aprendoz_desarrollodb.data.Recurso"/>
        </set>
    </class>
</hibernate-mapping>