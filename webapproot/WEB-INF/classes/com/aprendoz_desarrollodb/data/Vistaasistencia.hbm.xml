<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.aprendoz_desarrollodb.data.Vistaasistencia" table="vistaasistencia" catalog="aprendoz_desarrollo" dynamic-insert="false" dynamic-update="false">
        <composite-id name="id" class="com.aprendoz_desarrollodb.data.VistaasistenciaId">
            <key-property name="schoolYear" type="string">
                <column name="School_year" length="45"/>
            </key-property>
            <key-property name="asignatura" type="string">
                <column name="Asignatura" length="300"/>
            </key-property>
            <key-property name="numeroSesion" type="integer">
                <column name="numero_sesion"/>
            </key-property>
            <key-property name="fecha" type="timestamp">
                <column name="fecha" length="19"/>
            </key-property>
            <key-property name="horaInicio" type="time">
                <column name="hora_inicio" length="8"/>
            </key-property>
            <key-property name="horaFin" type="time">
                <column name="hora_fin" length="8"/>
            </key-property>
            <key-property name="apellido1" type="string">
                <column name="Apellido1" length="45"/>
            </key-property>
            <key-property name="apellido2" type="string">
                <column name="Apellido2" length="45"/>
            </key-property>
            <key-property name="nombre1" type="string">
                <column name="Nombre1" length="45"/>
            </key-property>
            <key-property name="nombre2" type="string">
                <column name="Nombre2" length="45"/>
            </key-property>
        </composite-id>
    </class>
</hibernate-mapping>