<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.aprendoz_desarrollodb.data.Salon" table="Salon" catalog="aprendoz_desarrollo" dynamic-insert="false" dynamic-update="false">
        <id name="idSalon" type="integer">
            <column name="Id_Salon"/>
            <generator class="assigned"/>
        </id>
        <property name="numeroSalon" type="string">
            <column name="Numero_Salon" length="45"/>
        </property>
    </class>
</hibernate-mapping>