<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.aprendoz_desarrollodb.data.EstadoDepartamento" table="estado_departamento" catalog="aprendoz_desarrollo" dynamic-insert="false" dynamic-update="false">
        <id name="idEstados" type="integer">
            <column name="id_estados"/>
            <generator class="identity"/>
        </id>
        <property name="estado" type="string">
            <column name="estado" length="100" not-null="true"/>
        </property>
        <many-to-one name="pais" class="com.aprendoz_desarrollodb.data.Pais">
            <column name="pais_id_pais" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>