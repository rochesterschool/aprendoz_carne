<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.aprendoz_desarrollodb.data.CafeteriaPostres" table="cafeteria_postres" catalog="aprendoz_desarrollo" dynamic-insert="false" dynamic-update="false">
        <id name="idPostres" type="integer">
            <column name="id_postres"/>
            <generator class="assigned"/>
        </id>
        <property name="postre" type="string">
            <column name="postre" not-null="true"/>
        </property>
        <property name="descripcion" type="string">
            <column name="descripcion"/>
        </property>
        <property name="imageLink" type="string">
            <column name="image_link"/>
        </property>
    </class>
</hibernate-mapping>