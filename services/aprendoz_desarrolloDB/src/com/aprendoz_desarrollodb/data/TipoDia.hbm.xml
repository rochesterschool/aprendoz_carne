<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.aprendoz_desarrollodb.data.TipoDia" table="tipo_dia" catalog="aprendoz_desarrollo" dynamic-insert="false" dynamic-update="false">
        <id name="idTipoDia" type="integer">
            <column name="id_tipo_dia"/>
            <generator class="identity"/>
        </id>
        <property name="tipoDia" type="string">
            <column name="tipo_dia" length="65535"/>
        </property>
        <property name="descripcion" type="string">
            <column name="descripcion" length="65535"/>
        </property>
        <set name="cronogramas" inverse="true" cascade="">
            <key>
                <column name="tipo_dia"/>
            </key>
            <one-to-many class="com.aprendoz_desarrollodb.data.Cronograma"/>
        </set>
    </class>
</hibernate-mapping>