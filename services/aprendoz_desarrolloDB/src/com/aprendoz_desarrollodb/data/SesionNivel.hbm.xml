<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.aprendoz_desarrollodb.data.SesionNivel" table="sesion_nivel" catalog="aprendoz_desarrollo" dynamic-insert="false" dynamic-update="false">
        <id name="idSesionNivel" type="integer">
            <column name="id_sesion_nivel"/>
            <generator class="identity"/>
        </id>
        <property name="numeroSesion" type="integer">
            <column name="numero_sesion"/>
        </property>
        <property name="horaInicio" type="time">
            <column name="hora_inicio" length="8"/>
        </property>
        <property name="horaFin" type="time">
            <column name="hora_fin" length="8"/>
        </property>
        <property name="dia" type="integer">
            <column name="dia" not-null="true"/>
        </property>
        <many-to-one name="nivel" class="com.aprendoz_desarrollodb.data.Nivel">
            <column name="nivel"/>
        </many-to-one>
        <many-to-one name="sy" class="com.aprendoz_desarrollodb.data.Sy">
            <column name="sy_id_sy"/>
        </many-to-one>
    </class>
</hibernate-mapping>