<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.aprendoz_desarrollodb.data.Coordinadores" table="coordinadores" catalog="aprendoz_desarrollo" dynamic-insert="false" dynamic-update="false">
        <composite-id name="id" class="com.aprendoz_desarrollodb.data.CoordinadoresId">
            <key-property name="idCoordinador" type="integer">
                <column name="id_coordinador"/>
            </key-property>
            <key-property name="personaIdPersona" type="integer">
                <column name="Persona_Id_Persona"/>
            </key-property>
            <key-property name="cursoIdCurso" type="integer">
                <column name="Curso_Id_Curso"/>
            </key-property>
            <key-property name="grupo" type="string">
                <column name="Grupo"/>
            </key-property>
            <key-property name="syIdSy" type="integer">
                <column name="SY_id_SY"/>
            </key-property>
        </composite-id>
        <many-to-one
            name="curso"
            class="com.aprendoz_desarrollodb.data.Curso"
            update="false"
            insert="false"
            fetch="select">
            <column name="Curso_Id_Curso" not-null="true"/>
        </many-to-one>
        <many-to-one
            name="sy"
            class="com.aprendoz_desarrollodb.data.Sy"
            update="false"
            insert="false"
            fetch="select">
            <column name="SY_id_SY" not-null="true"/>
        </many-to-one>
        <many-to-one
            name="persona"
            class="com.aprendoz_desarrollodb.data.Persona"
            update="false"
            insert="false"
            fetch="select">
            <column name="Persona_Id_Persona" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>