<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.aprendoz_desarrollodb.data.Sesion" table="sesion" catalog="aprendoz_desarrollo" dynamic-insert="false" dynamic-update="false">
        <id name="idSesion" type="integer">
            <column name="id_sesion"/>
            <generator class="identity"/>
        </id>
        <property name="fecha" type="timestamp">
            <column name="fecha" length="19"/>
        </property>
        <property name="numeroSesion" type="integer">
            <column name="numero_sesion"/>
        </property>
        <property name="impartida" type="boolean">
            <column name="impartida"/>
        </property>
        <property name="comentario" type="string">
            <column name="comentario" length="65535"/>
        </property>
        <property name="horaInicio" type="time">
            <column name="hora_inicio" length="8"/>
        </property>
        <property name="horaFin" type="time">
            <column name="hora_fin" length="8"/>
        </property>
        <many-to-one name="curso" class="com.aprendoz_desarrollodb.data.Curso">
            <column name="Curso_Id_Curso" not-null="true"/>
        </many-to-one>
        <many-to-one name="asignatura" class="com.aprendoz_desarrollodb.data.Asignatura">
            <column name="asignatura_Id_Asignatura" not-null="true"/>
        </many-to-one>
        <set name="asistencias" inverse="true" cascade="">
            <key>
                <column name="sesion_id_sesion" not-null="true"/>
            </key>
            <one-to-many class="com.aprendoz_desarrollodb.data.Asistencia"/>
        </set>
    </class>
</hibernate-mapping>