<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.aprendoz_desarrollodb.data.TipoAsistencia" table="tipo_asistencia" catalog="aprendoz_desarrollo" dynamic-insert="false" dynamic-update="false">
        <id name="idTipo" type="integer">
            <column name="id_tipo"/>
            <generator class="assigned"/>
        </id>
        <property name="tipo" type="string">
            <column name="tipo" length="45"/>
        </property>
        <set name="asistencias" inverse="true" cascade="">
            <key>
                <column name="tipo_asistencia_id_tipo" not-null="true"/>
            </key>
            <one-to-many class="com.aprendoz_desarrollodb.data.Asistencia"/>
        </set>
    </class>
</hibernate-mapping>