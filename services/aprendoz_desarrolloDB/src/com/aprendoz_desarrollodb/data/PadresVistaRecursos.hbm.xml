<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.aprendoz_desarrollodb.data.PadresVistaRecursos" table="padres_vista_recursos" catalog="aprendoz_desarrollo" dynamic-insert="false" dynamic-update="false">
        <composite-id name="id" class="com.aprendoz_desarrollodb.data.PadresVistaRecursosId">
            <key-property name="idAsignatura" type="integer">
                <column name="Id_Asignatura"/>
            </key-property>
            <key-property name="idRecurso" type="integer">
                <column name="Id_Recurso"/>
            </key-property>
            <key-property name="recurso" type="string">
                <column name="Recurso" length="300"/>
            </key-property>
            <key-property name="ubicacion" type="string">
                <column name="Ubicacion" length="300"/>
            </key-property>
        </composite-id>
    </class>
</hibernate-mapping>