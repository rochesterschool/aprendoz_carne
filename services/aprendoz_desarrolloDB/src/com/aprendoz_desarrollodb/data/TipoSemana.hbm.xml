<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.aprendoz_desarrollodb.data.TipoSemana" table="Tipo_Semana" catalog="aprendoz_desarrollo" dynamic-insert="false" dynamic-update="false">
        <id name="idTipoSemana" type="integer">
            <column name="id_Tipo_semana"/>
            <generator class="assigned"/>
        </id>
        <property name="tipoSemana" type="string">
            <column name="Tipo_semana" length="65535" not-null="true"/>
        </property>
        <property name="descripcion" type="string">
            <column name="Descripcion" length="65535"/>
        </property>
        <set name="horarios" inverse="true" cascade="">
            <key>
                <column name="tipo_semana_id_tipo_semana" not-null="true"/>
            </key>
            <one-to-many class="com.aprendoz_desarrollodb.data.Horario"/>
        </set>
        <set name="semanas" inverse="true" cascade="">
            <key>
                <column name="tipo_semana_id_tipo_semana"/>
            </key>
            <one-to-many class="com.aprendoz_desarrollodb.data.Semana"/>
        </set>
    </class>
</hibernate-mapping>